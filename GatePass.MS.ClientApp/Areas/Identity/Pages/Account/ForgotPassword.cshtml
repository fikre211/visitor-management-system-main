@page
@model ForgotPasswordModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Forgot your password?";
}



<div class="row justify-content-center">

<div class=" col-md-6 login-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="#" class="h1"><b>GatePass</b>MS</a>
        </div>
        <div class="card-body">
                <p class="login-box-msg">@Localizer["forgotPasswordMessage"]</p>
            <form  method="post">
                <div class="input-group mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">@Localizer["requestNewPassword"]</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <p class="mt-3 mb-1">
                    <a asp-page="./Login">@Localizer["login"]</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
