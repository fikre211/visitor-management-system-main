@page
@model RegisterModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-color: #e3f2fd;
        padding: 0px !important;
        font-family: 'Segoe UI', sans-serif;
    }

    .register-box {
        width: 530px;
        max-width: 95%;
    }

    .card {
        border-radius: 16px !important;
    }

    .compact-card {
        padding-top: 20px !important;
        padding-bottom: 20px !important;
    }

    .input-group {
        height: 42px !important;
        border: 1px solid #bbdefb !important;
        border-radius: 50px;
        overflow: hidden;
    }

        .input-group input {
            height: 42px !important;
            font-size: 14px;
        }

    /* Error Style (Password mismatch) */
    .error-border {
        border: 2px solid red !important;
    }

    /* Horizontal roles */
    .role-checkbox-group {
        display: flex;
        flex-wrap: nowrap;
        gap: 15px;
        align-items: center;
    }

        .role-checkbox-group label {
            font-weight: 500;
            padding: 6px 10px;
            background: #e8f0fe;
            border-radius: 6px;
            border: 1px solid #bbdefb;
            display: flex;
            align-items: center;
            white-space: nowrap;
            cursor: pointer;
        }

        .role-checkbox-group input[type="checkbox"] {
            accent-color: #1976d2;
            transform: scale(1.2);
            margin-right: 5px;
            cursor: pointer;
        }
</style>

<div class="d-flex justify-content-center align-items-center"
     style="height:100vh; width:100vw; position:fixed; top:0; left:0; overflow:hidden;">

    <div class="register-box">
        <div class="card border-0 shadow-lg compact-card">

            <!-- HEADER -->
            <div class="card-header text-center text-white py-3"
                 style="background: linear-gradient(45deg,#1e88e5,#1565c0); border-top-left-radius:16px; border-top-right-radius:16px;">
                <h4 class="mb-0 font-weight-bold">Register</h4>
            </div>

            <div class="card-body p-3">

                <p class="text-muted text-center mb-2" style="font-size: 14px;">
                    @Localizer["registerNewUser"]
                </p>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" onsubmit="return validatePasswordMatch()">

                    <div asp-validation-summary="ModelOnly" class="text-danger small text-center mb-2"></div>

                    <input asp-for="Input.EmployeeId" hidden />

                    @if (Model.Input?.EmployeeId == 0)
                    {
                        <div class="input-group mb-2 shadow-sm">
                            <input asp-for="Input.FirstName" class="form-control border-0 pl-3" required
                                   placeholder="@Localizer["firstName"]">
                        </div>

                        <div class="input-group mb-2 shadow-sm">
                            <input asp-for="Input.LastName" class="form-control border-0 pl-3" required
                                   placeholder="@Localizer["fatherName"]">
                        </div>

                        <div class="input-group mb-2 shadow-sm">
                            <input asp-for="Input.Email" type="email" class="form-control border-0 pl-3" required
                                   placeholder="@Localizer["email"]">
                        </div>

                        <div class="input-group mb-2 shadow-sm">
                            <input asp-for="Input.PhoneNumber" class="form-control border-0 pl-3" required
                                   placeholder="@Localizer["phone"]">
                        </div>

                        <div id="passwordGroup" class="input-group mb-2 shadow-sm">
                            <input asp-for="Input.Password" type="password" id="password" required
                                   class="form-control border-0 pl-3"
                                   placeholder="@Localizer["password"]">
                        </div>

                        <div id="confirmPasswordGroup" class="input-group mb-2 shadow-sm">
                            <input asp-for="Input.ConfirmPassword" type="password" id="confirmPassword" required
                                   class="form-control border-0 pl-3"
                                   placeholder="@Localizer["confirmPassword"]">
                        </div>
                    }
                    else
                    {
                        <div class="form-floating mb-2">
                            <label asp-for="Input.UserName">Username</label>
                            <input asp-for="Input.UserName" class="form-control" disabled />
                        </div>

                        <div id="passwordGroup" class="input-group mb-2 shadow-sm">
                            <input asp-for="Input.Password" type="password" id="password" required
                                   class="form-control border-0 pl-3"
                                   placeholder="@Localizer["password"]">
                        </div>

                        <div id="confirmPasswordGroup" class="input-group mb-2 shadow-sm">
                            <input asp-for="Input.ConfirmPassword" type="password" id="confirmPassword" required
                                   class="form-control border-0 pl-3"
                                   placeholder="@Localizer["confirmPassword"]">
                        </div>

                        <div class="mb-2 mt-2">
                            <label class="font-weight-bold">@Localizer["roles"]</label>

                            <div class="role-checkbox-group mt-1">
                                @foreach (var role in Model.Input.RolesList)
                                {
                                    <label>
                                        <input type="checkbox" required
                                               name="Input.SelectedRoles"
                                               class="roleCheck"
                                               value="@role.Value">
                                               
                                        @role.Text
                                    </label>
                                }
                            </div>
                        </div>
                    }

                    <!-- Password mismatch error -->
                    <p id="passwordError" class="text-danger text-center small" style="display:none;">
                        Passwords do not match.
                    </p>

                    <button type="submit"
                            class="btn btn-primary btn-block rounded-pill shadow-sm font-weight-bold mt-2"
                            style="background:#1565c0; border:none; height:42px;">
                        @Localizer["register"]
                    </button>

                </form>

                <p class="mb-0 text-center mt-3">
                    <a asp-page="./Login" class="font-weight-bold"
                       style="color:#1976d2; text-decoration:none;">
                        @Localizer["goToLogin"]
                    </a>
                </p>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Make checkboxes act like radio buttons -->
    <script>
        document.querySelectorAll(".roleCheck").forEach(chk => {
            chk.addEventListener("change", function () {
                if (this.checked) {
                    document.querySelectorAll(".roleCheck").forEach(c => {
                        if (c !== this) c.checked = false;
                    });
                }
            });
        });

        /* Password validation */
        function validatePasswordMatch() {
            const pass = document.getElementById("password").value;
            const confirm = document.getElementById("confirmPassword").value;

            const passGroup = document.getElementById("passwordGroup");
            const confirmGroup = document.getElementById("confirmPasswordGroup");
            const errorText = document.getElementById("passwordError");

            passGroup.classList.remove("error-border");
            confirmGroup.classList.remove("error-border");
            errorText.style.display = "none";

            if (pass !== confirm) {
                passGroup.classList.add("error-border");
                confirmGroup.classList.add("error-border");
                errorText.style.display = "block";
                return false; // Stop form submit
            }

            return true;
        }
    </script>
}
