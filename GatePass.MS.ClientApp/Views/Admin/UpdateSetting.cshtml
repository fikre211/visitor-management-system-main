@model GatePass.MS.Domain.ViewModels.SettingViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Configure";
}

<div style="padding: 30px; background: #f7faff; font-family: Segoe UI, Arial, sans-serif;">

    <div style="max-width: 600px; margin: 0 auto;">

        <div style="background: white; border-top: 4px solid #007bff; border-radius: 8px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);">

            <div style="background-color: #f0f7ff; border-bottom: 1px solid #cce5ff; padding: 20px;">
                <h3 style="margin: 0; color: #0056b3;">
                    <i class="fas fa-cogs mr-2"></i> @Localizer["settings"]
                </h3>
            </div>

            <form asp-action="UpdateSetting" style="padding: 25px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

               
                <div class="form-group" style="margin-bottom: 20px;">
                    <label asp-for="AppName" class="control-label" style="font-weight: 600; color: #333;">@Localizer["applicationName"]</label>
                    <input asp-for="AppName" class="form-control" readonly style="background-color: #f0f0f0; border-color: #ddd; border-radius: 4px;" />
                    <span asp-validation-for="AppName" class="text-danger" style="font-size: 13px;"></span>
                </div>

             
                <div class="form-group" style="margin-bottom: 25px;">
                    <label asp-for="MaxLoginAttempts" class="control-label" style="font-weight: 600; color: #333;">@Localizer["maximumLoginFailedAttempts"]</label>
                    <input asp-for="MaxLoginAttempts" type="number" step="1" class="form-control" style="border-color: #b3d7ff; border-radius: 4px;" />
                    <span asp-validation-for="MaxLoginAttempts" class="text-danger" style="font-size: 13px;"></span>
                </div>

              
                <div class="form-group text-right">
                    <input type="submit"
                           value="@Localizer["update"]"
                           class="btn btn-primary"
                           style="background:#007bff; border-color:#007bff; padding:8px 20px; border-radius:6px; font-weight:600;" />
                </div>
            </form>
        </div>

        
        <div style="margin-top: 20px;">
            <a asp-action="Index"
               style="text-decoration: none; color: #007bff; font-weight: 600;">
                <i class="fas fa-arrow-left"></i> @Localizer["backToList"]
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}