@model GatePass.MS.Domain.ViewModels.SettingViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Configure";
}

<div class="align-items-center" style="padding: 16px">
    <div class="card col-md-6 card-info" style="padding: 8px">
        <div class="card-header">
            <h3 class="card-title">@Localizer["settings"]</h3>
        </div>
        <form asp-action="UpdateSetting">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppName" class="control-label">@Localizer["applicationName"]</label>
                <input asp-for="AppName" class="form-control" readonly />
                <span asp-validation-for="AppName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaxLoginAttempts" class="control-label">@Localizer["maximumLoginFailedAttempts"]</label>
                <input asp-for="MaxLoginAttempts" type="number" step="1" class="form-control" readonly />
                <span asp-validation-for="MaxLoginAttempts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["update"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["backToList"]</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
