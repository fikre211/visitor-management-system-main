@model GatePass.MS.Domain.Company
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Delete Company";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center rounded-top">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @Localizer["Confirm Delete"]
                    </h3>
                </div>
                <div class="card-body">
                    <p class="fs-5 text-muted text-center">
                        @Localizer["Are you sure you want to delete this company"]?
                        @Localizer["This action"] <strong> @Localizer["cannot be undone"]</strong>.
                    </p>
                    <hr />
                    <dl class="row mb-4">
                        <dt class="col-sm-3 fw-bold"> @Localizer["Company Name"]</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                    </dl>

                    <form asp-action="Delete" class="text-center">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg px-4 me-2">
                            <i class="bi bi-trash3-fill me-1"></i>  @Localizer["Delete"]
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-arrow-left-circle me-1"></i>  @Localizer["Back to List"]
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
