@model GatePass.MS.Domain.Company

@{
    ViewData["Title"] = "Details";
}

<div style="padding: 30px; background: #f7faff; font-family: Segoe UI, Arial, sans-serif;">

    <div style="background: white; border-radius: 10px; box-shadow: 0px 4px 10px rgba(0,0,0,0.1); padding: 30px; max-width: 800px; margin: 0 auto;">

        <h2 style="color: #007bff; border-bottom: 2px solid #007bff; padding-bottom: 10px; margin-bottom: 20px;">
            <i class="fas fa-building mr-2"></i> Company Details
        </h2>

        <div>
            <h4 style="margin-top: 0; color: #333;">Company Information</h4>
            <hr style="border-top: 1px solid #eee; margin-bottom: 25px;" />

            <dl class="row" style="font-size: 15px;">

               
                <dt class="col-sm-3" style="font-weight: 600; color: #555; padding-top: 5px; padding-bottom: 5px;">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9" style="padding-top: 5px; padding-bottom: 5px;">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                @* Uncomment and modify these sections if you have more fields in your model *@
                @* <dt class="col-sm-3" style="font-weight: 600; color: #555; padding-top: 5px; padding-bottom: 5px;">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-9" style="padding-top: 5px; padding-bottom: 5px;">
                    @Html.DisplayFor(model => model.Address)
                </dd> 
                *@
            </dl>
        </div>

        <div style="margin-top: 30px; border-top: 1px solid #f0f0f0; padding-top: 20px;">
            <a asp-action="Edit" asp-route-id="@Model?.Id"
               style="text-decoration: none; background: #007bff; color: white; padding: 8px 15px; border-radius: 5px; font-weight: 600; margin-right: 10px;">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index"
               style="text-decoration: none; background: #6c757d; color: white; padding: 8px 15px; border-radius: 5px; font-weight: 600;">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>