@model GatePass.MS.Domain.Company
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Edit";
}

<div style="padding:50px;">

    <h3 style="color:#0d6efd; font-weight:700; margin-bottom:20px;">
        <i class="fas fa-edit"></i> Company Edit
    </h3>

    <div class="card shadow-sm" style="border-radius:10px; border-top:4px solid #0d6efd;">
        <div class="card-body" style="padding:30px;">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label" style="font-weight:600;">@Localizer["name"]</label>
                    <input asp-for="Name" class="form-control" style="border-radius:6px;" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Slug" class="control-label" style="font-weight:600;">@Localizer["Slug"]</label>
                    <input asp-for="Slug" class="form-control" style="border-radius:6px;" />
                    <span asp-validation-for="Slug" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label" style="font-weight:600;">@Localizer["Email"]</label>
                    <input asp-for="Email" class="form-control" style="border-radius:6px;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="website" class="control-label" style="font-weight:600;">@Localizer["website"]</label>
                    <input asp-for="website" class="form-control" required style="border-radius:6px;" />
                    <span asp-validation-for="website" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Phone" class="control-label" style="font-weight:600;">@Localizer["Phone"]</label>
                    <input asp-for="Phone" class="form-control" style="border-radius:6px;" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="LogoPath" class="control-label" style="font-weight:600;">@Localizer["Logo"]</label>
                    <input asp-for="LogoPath" type="file" class="form-control" name="file" style="border-radius:6px;" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit"
                           value="Save"
                           class="btn"
                           style="
                                background:#0d6efd;
                                color:white;
                                font-weight:600;
                                padding:10px 20px;
                                border-radius:6px;
                                box-shadow:0 2px 6px rgba(0,0,0,0.2);
                           "
                           onmouseover="this.style.background='#0b5ed7'"
                           onmouseout="this.style.background='#0d6efd'" />
                </div>
            </form>

        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index"
           style="color:#0d6efd; font-weight:600; text-decoration:none;">
            ← Back to List
        </a>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
