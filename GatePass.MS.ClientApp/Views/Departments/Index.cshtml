@model IEnumerable<GatePass.MS.Domain.Department>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Index";
}

<div style="padding:20px;">

    <div class="mb-3" style="margin-bottom:20px;">
        <button onclick="openCreateModal()" class="btn btn-primary"
                style="background:#0d6efd; border-color:#0d6efd; padding:8px 14px; border-radius:6px; font-weight:500;">
            <i class="fas fa-plus"></i> @Localizer["createNewDepartment"]
        </button>
    </div>

    <div class="card"
         style="border-radius:10px; border:1px solid #e3f2fd; box-shadow:0 4px 10px rgba(0,123,255,.15); overflow:hidden;">

        <div class="card-header text-white"
             style="background:linear-gradient(90deg,#0d6efd,#0a58ca); padding:15px 20px; border-bottom:2px solid #004baf;">
            <h3 class="card-title" style="margin:0; font-weight:600;">@Localizer["departmentLists"]</h3>
        </div>

        <div class="card-body p-0" style="padding:0;">
            <table class="table table-striped table-hover" style="margin:0;">
                <thead style="background:#e7f1ff; color:#004085; border-bottom:2px solid #0d6efd;">
                    <tr>
                        <th>@Localizer["departmentName"]</th>
                        <th class="text-right">@Localizer["Actions"]</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var department in Model.Where(d => d.ParentDepartmentId == null))
                    {
                        <tr data-widget="expandable-table" aria-expanded="true" style="cursor:pointer;">
                            <td>
                                <i class="expandable-table-caret fas fa-caret-right fa-fw" style="color:#0d6efd; margin-right:6px;"></i>
                                @department.Name
                            </td>

                            <td class="text-right">
                                <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger btn-sm"
                                   style="background:#dc3545; border-color:#dc3545; margin-left:4px;" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>

                                <button onclick="openCreateModal('@department.Id')" class="btn btn-sm"
                                        style="background:#0ba8e6; color:#fff; border-color:#0ba8e6; margin-left:4px;" title="Add Sub">
                                    <i class="fas fa-plus"></i>
                                </button>

                                <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-warning btn-sm"
                                   style="background:#ffc107; border-color:#ffca2c; color:#000; margin-left:4px;" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>

                        <tr class="expandable-body">
                            <td colspan="2">
                                <div style="padding:0;">
                                    <table class="table table-hover" style="margin:0;">
                                        <tbody>
                                            @await Html.PartialAsync("_DepartmentPartial", department)
                                        </tbody>
                                    </table>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="createDepartmentModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="border-radius:10px; border:none; box-shadow:0 5px 15px rgba(0,0,0,0.2);">

            <div class="modal-header" style="background:linear-gradient(90deg,#0d6efd,#0a58ca); color:white; border-radius:10px 10px 0 0;">
                <h5 class="modal-title" style="font-weight:600;">
                    <i class="fas fa-plus-circle"></i> @Localizer["createNewDepartment"]
                </h5>
                <button type="button" class="close" data-dismiss="modal" onclick="closeCreateModal()" aria-label="Close" style="color:white; opacity:1;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form asp-action="Create" method="post">
                <div class="modal-body" style="padding:25px;">

                    <input type="hidden" name="ParentDepartmentId" id="modalParentId" />

                    <div class="form-group">
                        <label class="control-label" style="font-weight:500; color:#004085;">@Localizer["departmentName"]</label>
                        <input type="text" name="Name" id="modalNameInput" class="form-control" required
                               style="border:1px solid #bcdcff; border-radius:6px; padding:8px; margin-top:5px;" />
                    </div>

                </div>
                <div class="modal-footer" style="background-color:#f8f9fa; border-radius:0 0 10px 10px;">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="closeCreateModal()">@Localizer["Cancel"]</button>
                    <button type="submit" class="btn btn-primary" style="background:#0d6efd;">@Localizer["Create"]</button>
                </div>
            </form>

        </div>
    </div>
</div>
@section Scripts {
    <script>
        // Function to OPEN the modal
        function openCreateModal(parentId = null) {
            // clear the form
            $('#modalNameInput').val('');

            // Set the parent ID (if provided) or clear it (if creating new root)
            $('#modalParentId').val(parentId);

            // Open the modal
            $('#createDepartmentModal').modal('show');
        }

        // Function to CLOSE the modal
        function closeCreateModal() {
            $('#createDepartmentModal').modal('hide');
        }
    </script>
}