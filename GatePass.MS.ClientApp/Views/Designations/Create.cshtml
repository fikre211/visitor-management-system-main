@model GatePass.MS.Domain.Designation
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Create";
}

<div style="padding:50px; display:flex; justify-content:center;">

    <div style="width:100%; max-width:600px; background:#ffffff; border:1px solid #e3f2fd;
                border-radius:10px; box-shadow:0 4px 10px rgba(0,123,255,.15); padding:25px;">

        <div style="margin-bottom:20px;">
            <h3 style="margin:0; font-weight:600; color:#0d6efd;">@Localizer["addDesignation "]</h3>
        </div>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"
                 style="margin-bottom:15px; font-size:14px;"></div>

            <div class="form-group" style="margin-bottom:20px;">
                <label asp-for="Name" class="control-label"
                       style="font-weight:500; color:#004085;">@Localizer["name"]</label>
                <input asp-for="Name" class="form-control"
                       style="border:1px solid #bcdcff; border-radius:6px; padding:8px; width:100%;" />
                <span asp-validation-for="Name" class="text-danger"
                      style="font-size:14px; margin-top:5px; display:block;"></span>
            </div>

            <div class="form-group" style="margin-top:10px;">
                <input type="submit" value="@Localizer["create"]"
                       style="background:#0d6efd; border-color:#0d6efd; color:#fff;
                              padding:10px 20px; border-radius:6px; font-weight:500; cursor:pointer;" />
            </div>
        </form>

        <div style="margin-top:15px;">
            <a asp-action="Index" style="color:#0d6efd; text-decoration:none; font-weight:500;">
                @Localizer["backToList"]
            </a>
        </div>

    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
