@model GatePass.MS.Domain.Designation

<div class="modal-content"
     style="box-shadow:0 5px 18px rgba(0,0,0,.2); border-radius:12px; border:0; overflow:hidden;">

    <div class="modal-header text-white"
         style="background:#dc3545; padding:18px; border-bottom:3px solid #b02a37; border-top-left-radius:12px; border-top-right-radius:12px;">

        <h5 class="modal-title" style="margin:0; font-weight:600; display:flex; align-items:center;">
            <i class="bi bi-exclamation-triangle-fill" style="margin-right:8px;"></i>
            @ViewData["Title"]
        </h5>

        <button type="button" class="btn-close btn-close-white"
                data-bs-dismiss="modal" aria-label="Close"
                style="filter:brightness(0) invert(1);"></button>
    </div>

    <div class="modal-body text-center" style="padding:30px;">
        <p style="font-size:18px; color:#6c757d; margin-bottom:10px;">
            Are you sure you want to delete this designation?
        </p>

        <p style="font-size:17px; font-weight:600; color:#000; margin-bottom:10px;">
            @Model.Name
        </p>

        <p style="color:#b02a37; font-size:15px; margin-bottom:15px;">
            This action cannot be undone.
        </p>

        <hr style="margin:20px 0; border-color:#f0b7b7;">

        <form asp-action="Delete" method="post" style="margin-top:10px;">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <button type="submit"
                    style="background:#dc3545; border:none; color:#fff; padding:10px 25px;
                           font-size:17px; border-radius:6px; margin-right:8px; cursor:pointer;">
                <i class="bi bi-trash3-fill" style="margin-right:5px;"></i> Delete
            </button>

            <button type="button" data-bs-dismiss="modal"
                    style="border:2px solid #6c757d; color:#6c757d; padding:10px 25px;
                           font-size:17px; border-radius:6px; background:none; cursor:pointer;">
                <i class="bi bi-x-circle" style="margin-right:5px;"></i> Cancel
            </button>
        </form>
    </div>
</div>
