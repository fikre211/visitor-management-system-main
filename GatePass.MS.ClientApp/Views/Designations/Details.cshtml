@model GatePass.MS.Domain.Designation

<div style="padding:50px; display:flex; justify-content:center;">

    <div style="width:100%; max-width:600px; background:#ffffff; border:1px solid #e3f2fd;
                border-radius:10px; box-shadow:0 4px 10px rgba(0,123,255,.15); padding:25px;">

        <h1 style="margin-bottom:25px; color:#0d6efd; font-weight:600;">Details</h1>

        <div style="margin-bottom:20px;">
            <h4 style="margin-bottom:10px; font-weight:600; color:#004085;">Designation</h4>
            <hr style="border-color:#e3f2fd;" />
            <dl style="display:flex; flex-wrap:wrap; margin:0;">
                <dt style="width:30%; font-weight:500; color:#004085; padding-bottom:8px;">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd style="width:70%; padding-bottom:8px; color:#212529;">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>

        <div style="margin-top:20px;">
            <a asp-action="Edit" asp-route-id="@Model?.Id"
               style="background:#0d6efd; border-color:#0d6efd; color:#fff;
                      padding:8px 16px; border-radius:6px; text-decoration:none; font-weight:500; margin-right:8px;">
                Edit
            </a>
            <a asp-action="Index"
               style="background:#6c757d; border-color:#6c757d; color:#fff;
                      padding:8px 16px; border-radius:6px; text-decoration:none; font-weight:500;">
                Back to List
            </a>
        </div>

    </div>

</div>
