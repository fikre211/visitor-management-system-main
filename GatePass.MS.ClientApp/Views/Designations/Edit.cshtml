@model GatePass.MS.Domain.Designation
@{
    ViewData["Title"] = "Edit Designation";
}

<div style="padding:50px; display:flex; justify-content:center;">

    <div style="width:100%; max-width:600px; background:#ffffff; border:1px solid #e3f2fd;
                border-radius:10px; box-shadow:0 4px 10px rgba(0,123,255,.15); padding:25px;">

        <h1 style="margin-bottom:25px; color:#0d6efd; font-weight:600; font-size: large">Edit Designation</h1>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"
                 style="margin-bottom:15px; font-size:14px;"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CompanyId" />

            <div class="form-group" style="margin-bottom:20px;">
                <label asp-for="Name" class="control-label"
                       style="font-weight:500; color:#004085;">Name</label>
                <input asp-for="Name" class="form-control"
                       style="border:1px solid #bcdcff; border-radius:6px; padding:8px; width:100%;" />
                <span asp-validation-for="Name" class="text-danger"
                      style="font-size:14px; margin-top:5px; display:block;"></span>
            </div>

            <div class="form-group" style="margin-top:10px;">
                <button type="submit"
                        style="background:#0d6efd; border-color:#0d6efd; color:#fff;
                               padding:10px 20px; border-radius:6px; font-weight:500; cursor:pointer;">
                    Save
                </button>

                <a asp-action="Index"
                   style="background:#6c757d; border-color:#6c757d; color:#fff;
                          padding:10px 20px; border-radius:6px; font-weight:500; text-decoration:none; margin-left:8px;">
                    Cancel
                </a>
            </div>
        </form>

    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
