@model IEnumerable<GatePass.MS.Domain.Designation>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Index";
    var designations = Model.ToList();
    var hasDesignations = designations.Any();
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> @Localizer["createNewDesignation"]
    </a>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title">@Localizer["designationLists"]</h3>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Localizer["designationName"]</th>
                    <th class="text-right">@Localizer["actions"]</th>
                </tr>
            </thead>
            <tbody>
                @if (hasDesignations)
                {
                    @foreach (var designation in designations)
                    {
                        <tr>
                            <td>
                                @designation.Name
                            </td>
                            <td class="text-right">
                                <a asp-action="Delete" asp-route-id="@designation.Id" class="btn btn-danger btn-sm" title="Delete Designation">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@designation.Id" class="btn btn-warning btn-sm ml-2" title="Edit Designation">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@designation.Id" class="btn btn-info btn-sm ml-2" title="View Details">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted">
                            @Localizer["noDesignationsFound"]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
