@model GatePass.MS.Domain.Employee
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Create Employee";
}

<div class="modal-header"
     style="background: linear-gradient(45deg, #1e88e5, #1565c0); color: white; padding:18px; border-bottom:none;">

    <h4 class="modal-title" style="font-weight:700; font-size:20px; letter-spacing:1px;">
        @ViewData["Title"]
    </h4>

    <button type="button" class="close" data-dismiss="modal" style="color:white; opacity:1; font-size:34px;">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body" style="background:#e3f2fd; padding:30px;">
    <div class="card border-0 shadow-lg" style="border-radius: 15px; overflow:hidden;">
        <div class="card-body" style="padding:30px; background:white;">

            <form asp-action="Create" id="createForm">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- TWO COLUMNS -->
                <div style="display:grid; grid-template-columns: 1fr 1fr; gap:20px;">

                    <div>
                        <label asp-for="FirstName" style="font-weight:600; color:#0d47a1;">@Localizer["firstName"]</label>
                        <div class="input-group mb-2 shadow-sm rounded-pill overflow-hidden"
                             style="border:1px solid #bbdefb;">
                            <input asp-for="FirstName" required class="form-control border-0 pl-4" style="height:45px;">
                        </div>
                    </div>

                    <div>
                        <label asp-for="LastName" style="font-weight:600; color:#0d47a1;">@Localizer["fatherName"]</label>
                        <div class="input-group mb-2 shadow-sm rounded-pill overflow-hidden"
                             style="border:1px solid #bbdefb;">
                            <input asp-for="LastName" required class="form-control border-0 pl-4" style="height:45px;">
                        </div>
                    </div>

                    <div>
                        <label asp-for="Email" style="font-weight:600; color:#0d47a1;">@Localizer["email"]</label>
                        <div class="input-group mb-2 shadow-sm rounded-pill overflow-hidden"
                             style="border:1px solid #bbdefb;">
                            <input asp-for="Email" type="email" required class="form-control border-0 pl-4"
                                   style="height:45px;">
                        </div>
                    </div>

                    <div>
                        <label asp-for="Phone" style="font-weight:600; color:#0d47a1;">@Localizer["phone"]</label>
                        <div class="input-group mb-2 shadow-sm rounded-pill overflow-hidden"
                             style="border:1px solid #bbdefb;">
                            <input asp-for="Phone" type="tel" pattern="\d{10}" required
                                   class="form-control border-0 pl-4" style="height:45px;">
                        </div>
                    </div>

                    <div>
                        <label asp-for="Gender" style="font-weight:600; color:#0d47a1;">@Localizer["gender"]</label>
                        <div style="display:flex; gap:15px; margin-top:10px; padding-left:10px;">
                            <label style="cursor:pointer; color:#1565c0;">
                                <input asp-for="Gender" requuired type="radio" value="Male" style="margin-right:5px;"> Male
                            </label>
                            <label style="cursor:pointer; color:#1565c0;">
                                <input asp-for="Gender" type="radio" value="Female" style="margin-right:5px;"> Female
                            </label>
                        </div>
                    </div>

                    <div>
                        <label asp-for="Address" style="font-weight:600; color:#0d47a1;">@Localizer["address"]</label>
                        <div class="input-group mb-2 shadow-sm rounded-pill overflow-hidden"
                             style="border:1px solid #bbdefb;">
                            <input asp-for="Address" required class="form-control border-0 pl-4" style="height:45px;">
                        </div>
                    </div>

                    <div>
                        <label asp-for="Age" style="font-weight:600; color:#0d47a1;">@Localizer["age"]</label>
                        <div class="input-group mb-2 shadow-sm rounded-pill overflow-hidden"
                             style="border:1px solid #bbdefb;">
                            <input asp-for="Age" type="number" min="18" max="120" required
                                   class="form-control border-0 pl-4" style="height:45px;">
                        </div>
                    </div>

                    <div>
                        <label asp-for="DepartmentId" style="font-weight:600; color:#0d47a1;">@Localizer["department"]</label>
                        <div class="shadow-sm rounded-pill overflow-hidden"
                             style="border:1px solid #bbdefb;">
                            <select asp-for="DepartmentId" asp-items="ViewBag.DepartmentId"
                                    class="form-control border-0 pl-4" style="height:45px;"></select>
                        </div>
                    </div>

                    <div>
                        <label asp-for="DesignationId" style="font-weight:600; color:#0d47a1;">@Localizer["designation"]</label>
                        <div class="shadow-sm rounded-pill overflow-hidden"
                             style="border:1px solid #bbdefb;">
                            <select asp-for="DesignationId" asp-items="ViewBag.DesignationId"
                                    class="form-control border-0 pl-4" style="height:45px;"></select>
                        </div>
                    </div>

                </div>

                <!-- Submit -->
                <div style="text-align:right; margin-top:30px;">
                    <button type="submit"
                            class="btn btn-primary shadow-sm rounded-pill font-weight-bold"
                            style="height:50px; width:170px; background-color:#1565c0; border:none;">
                        Create
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
