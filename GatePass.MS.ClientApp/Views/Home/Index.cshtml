                                <div class="inner">
                                    <h3>@ViewBag.Pendingrequest</h3>
                                    <p>@Localizer["Pending Requests"]</p>
                                </div>
                                <a href="@Url.Action("Index", "RequestInformations", new { status = "pending" })" class="small-box-footer">
                                    @Localizer["More Info"] <i class="fas fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>
                         @if (company.Slug == "hopr")
                    {
                        <div class="col-lg-3 col-6">
                            <div class="small-box bg-orange">
                                <!-- Second row color: bg-pink (custom pink) -->
                                <div class="inner">
                                    <h3>@(ViewBag.Reviewedrequest ?? 0)</h3>
                                    <p>@Localizer["Reviewed Requests"]</p>
                                </div>
                                <a href="@Url.Action("Index", "RequestInformations", new { status = "reviewed" })" class="small-box-footer">
                                    @Localizer["More Info"] <i class="fas fa-arrow-circle-right"></i>
                                </a>
                            </div>
                    </div>
                }
                        <div class="col-lg-3 col-6">
                            <div class="small-box bg-danger">
                                <div class="inner">
                                    <h3>@ViewBag.Rejectedrequest</h3>
                                    <p>@Localizer["Rejected Requests"]</p>
                                </div>
                                <a href="@Url.Action("Index", "RequestInformations", new { status = "rejected" })" class="small-box-footer">
                                    @Localizer["More Info"] <i class="fas fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Charts Section -->
                    <div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Visitors Overview</h3>
            </div>
            <div class="card-body">
                <canvas id="adminBarChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
            </div>
        </div>
    </div>
                         <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">User Roles Distribution</h3>
            </div>
            <div class="card-body">
                <canvas id="userRolesPieChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
            </div>
        </div>
    </div>
</div>
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Requests Trend</h3>
                                </div>
                                <div class="card-body">
                                    <canvas id="requestsLineChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (isInSupervisorRole)
    {
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-6">
                            <!-- small box -->
                            <a href="@Url.Action("Index", "RequestInformations")" class="small-box bg-info text-decoration-none">
                                <div class="inner">
                                    <h3>@ViewBag.allRequests</h3>
                                    <p>@Localizer["All Requests"]</p>
                                </div>
                            </a>
                        </div>
                        <!-- ./col -->
                        <div class="col-6">
                            <!-- small box -->
                            <a href="@Url.Action("Index", "RequestInformations", new { status = "approved" })" class="small-box bg-success text-decoration-none">
                                <div class="inner">
                                    <h3>@ViewBag.Approvedrequest</h3>
                                    <p>@Localizer["approvedRequests"]</p>
                                </div>
                            </a>
                        </div>
                        <!-- ./col -->
                        <div class="col-6">
                            <!-- small box -->
                            <a href="@Url.Action("Index", "RequestInformations", new { status = "pending" })" class="small-box bg-warning text-decoration-none">
                                <div class="inner">
                                    <h3>@ViewBag.Pendingrequest</h3>
                                    <p>@Localizer["pendingRequests"]</p>
                                </div>
                            </a>
                        </div>
                        <!-- ./col -->
                        <div class="col-6">
                            <!-- small box -->
                            <a href="@Url.Action("Index", "RequestInformations", new { status = "rejected" })" class="small-box bg-danger text-decoration-none">
                                <div class="inner">
                                    <h3>@ViewBag.Rejectedrequest</h3>
                                    <p>@Localizer["rejectedRequests"]</p>
                                </div>
                            </a>
                        </div>
                        <!-- ./col -->
                    </div> <!-- End of inner row -->
                </div> <!-- End of col-12 -->
            </div> <!-- End of row -->
        </div> <!-- End of container-fluid -->
    }
    @if (!isInSupervisorRole && isInEmployeeRole)
    {
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-6">
                            <a href="@Url.Action("Index", "RequestInformations")" class="small-box bg-info text-decoration-none">
                                <div class="inner">
                                    <h3>@ViewBag.allRequests</h3>
                                    <p>@Localizer["All Requests"]</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("Invite", "RequestInformations")" class="small-box bg-success text-decoration-none">
                                <div class="inner">
                                    <h3>+</h3>
                                    <p>@Localizer["New Request"]</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("Index", "RequestInformations", new { status = "approved" })" class="small-box bg-success text-decoration-none">
                                <div class="inner">
                                    <h3>@ViewBag.ApprovedrequestEmployee</h3>
                                    <p>@Localizer["approvedRequests"]</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-6">
                            <!-- small box -->
                            <a href="@Url.Action("Index", "RequestInformations", new { status = "pending" })" class="small-box bg-warning text-decoration-none">
                                <div class="inner">
                                    <h3>@ViewBag.PendingrequestEmployee</h3>
                                    <p>@Localizer["pendingRequests"]</p>
                                </div>
                            </a>
                        </div>
                        <!-- ./col -->
                        <div class="col-6">
                            <!-- small box -->
                            <a href="@Url.Action("Index", "RequestInformations", new { status = "rejected" })" class="small-box bg-danger text-decoration-none">
                                <div class="inner">
                                    <h3>@ViewBag.RejectedrequestEmployee</h3>
                                    <p>@Localizer["rejectedRequests"]</p>
                                </div>
                            </a>
                        </div>
                        <!-- ./col -->
                    </div>
                </div>
            </div>
        </div>
    }

   
    @if (isInGatekeeperRole)
    {
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Visitor Requests</h3>
                        </div>
                        <div class="card-body table-responsive p-0">
                            <table id="myDataTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>@Localizer["visitDateStart"]</th>
                                        <th>@Localizer["visitDateEnd"]</th>
                                        <th>@Localizer["purposeOfVisit"]</th>
                                        <th>@Localizer["responsiblePerson"]</th>
                                        <th>Guest Destination Department</th>
                                        <th>Print</th>
                                        <th>Check-in Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        var request = Model[i];
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>
                                                @if (request.IsIndividual)
                                                {
                                                    @(request.Guest?.FirstName + " " + request.Guest?.LastName)
                                                }
                                                else
                                                {
                                                    @request.Guest?.CompanyName
                                                }
                                            </td>
                                            <td>@request.VisitDateTimeStart.ToString("yyyy-MM-dd")</td>
                                            <td>@request.VisitDateTimeEnd.ToString("yyyy-MM-dd")</td>
                                            <td>@request.PurposeOfVisit</td>
                                            <td>
                                                @if (request.Employee != null)
                                                {
                                                    @(request.Employee?.FirstName + " " + request.Employee?.LastName)
                                                }
                                                else
                                                {
                                                    <span>Outer Request</span>
                                                }
                                            </td>
                                            <td>@request?.Department?.Name</td>
                                            <td>
                                                @if (request.ImageData != null)
                                                {
                                                    <button class="btn btn-secondary print-btn" data-image="@Url.Action("GetDynamicImage", "Guest", new { id = request.Id })">
                                                        <i class="fas fa-print"></i>
                                                    </button>
                                                }
                                            </td>
                                            <td>
                                                @if (!request.IsCheckedIn)
                                                {
                                                    <form asp-controller="Guest" asp-action="CheckIn" method="post" class="d-inline">
                                                        <input type="hidden" name="requestId" value="@request.Id" />
                                                        <button type="submit" class="btn btn-success">@Localizer["checkIn"]</button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <form asp-controller="Guest" asp-action="CheckOut" method="post" class="d-inline">
                                                        <input type="hidden" name="requestId" value="@request.Id" />
                                                        <button type="submit" class="btn btn-warning">@Localizer["checkOut"]</button>
                                                    </form>
                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-controller="RequestInformations" asp-action="ApproveDisapprove" asp-route-id="@request.Id">@Localizer["viewDetail"]</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
<div class="container-total">

