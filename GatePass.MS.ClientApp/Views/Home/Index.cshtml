                                <div class="inner">
                                    <h3>@ViewBag.Approvedrequest</h3>
                                    <p>@Localizer["Approved Requests"]</p>
                                </div>
                                <a href="@Url.Action("Index", "RequestInformations", new { status = "approved" })" class="small-box-footer">
                                    @Localizer["More Info"] <i class="fas fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>
