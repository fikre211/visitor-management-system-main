        @using Microsoft.AspNetCore.Mvc.Localization
    @inject IViewLocalizer Localizer

        <style>
            :root {
                --primary-blue: #0d47a1; /* Deep Blue */
                --accent-blue: #e3f2fd; /* Light Blue */
                --hover-blue: #bbdefb;
            }

            /* Table Styling */
            .table-blue-theme thead {
                background-color: var(--primary-blue);
                color: white;
            }

            .table-blue-theme tbody tr {
                transition: background-color 0.2s ease;
                cursor: pointer;
            }

                .table-blue-theme tbody tr:hover {
                    background-color: var(--hover-blue) !important;
                }

            /* Modal Styling */
            .visitor-modal-header {
                background-color: var(--primary-blue);
                color: white;
            }

            .visitor-slip-container {
                background-color: #f8f9fa;
                border: 2px dashed var(--primary-blue);
                border-radius: 8px;
                padding: 15px;
                text-align: center;
                height: 100%;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }

            .visitor-photo {
                width: 100%;
                height: auto;
                border-radius: 4px;
                margin-bottom: 15px;
                object-fit: cover;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            }

            .detail-label {
                font-weight: 600;
                color: #6c757d;
                font-size: 0.85rem;
                text-transform: uppercase;
            }

            .detail-value {
                font-weight: 500;
                color: #212529;
                font-size: 1rem;
                margin-bottom: 12px;
                border-bottom: 1px solid #dee2e6;
                padding-bottom: 4px;
            }

            .action-btn-group .btn {
                width: 100%;
                margin-bottom: 8px;
                border-radius: 20px;
            }
        </style>

        <div class="container-fluid" style="padding: 30px">
            <div class="row">
                <div class="col-12">
                    <div class="card shadow-sm border-0">
                        <div class="card-header" style="background-color: white; border-bottom: 2px solid var(--primary-blue);">
                            <h3 class="card-title text-primary"><i class="fas fa-users mr-2"></i>@Localizer["Visitor Requests"]</h3>
                        </div>
                        <div class="card-body p-0">
                            <table id="myDataTable" class="table table-bordered table-blue-theme mb-0">
                                <thead>
                                    <tr>
                                        <th style="width: 5%">#</th>
                                        <th style="width: 40%">@Localizer["Visitor Name"]</th>
                                        <th style="width: 30%">@Localizer["Visit Date"]</th>
                                        <th style="width: 25%">@Localizer["Status"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                            @{
                                        // Initialize a counter for the visible rows
                                        int displayCount = 0;
                                    }
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        var request = Model[i];

                                        // ---------------------------------------------------------
                                        // FILTER LOGIC START
                                        // ---------------------------------------------------------

                                        // 1. Filter Date: Today or Future
                                        bool isDateValid = request.VisitDateTimeStart.Date >= DateTime.Today;

                                        // 2. Filter Status: Approved Only
                                        // IMPORTANT: Replace 'RequestStatus.Approved' with your actual Enum or boolean property (e.g. request.IsApproved)
                                        // If you use a string, use: request.Status == "Approved"
                                        bool isApproved = request.Status == "Approved";

                                        // Apply Filter
                                        if (!isDateValid || !isApproved)
                                        {
                                            continue; // Skip this iteration if criteria are not met
                                        }

                                        // Increment visual counter only for shown rows
                                        displayCount++;
                                        // ---------------------------------------------------------
                                        // FILTER LOGIC END
                                        // ---------------------------------------------------------

                                        var visitorName = request.IsIndividual ? (request.Guest?.FirstName + " " + request.Guest?.LastName) : request.Guest?.CompanyName;
                                        var hostName = request.Employee != null ? (request.Employee?.FirstName + " " + request.Employee?.LastName) : "Outer Request";
                                        var imgUrl = request.ImageData != null ? Url.Action("GetDynamicImage", "Guest", new { id = request.Id }) : "";

                                        <tr class="view-details-row"
                                            data-id="@request.Id"
                                            data-name="@visitorName"
                                            data-start="@request.VisitDateTimeStart.ToString("yyyy-MM-dd HH:mm")"
                                            data-end="@request.VisitDateTimeEnd.ToString("yyyy-MM-dd HH:mm")"
                                            data-purpose="@request.PurposeOfVisit"
                                            data-host="@hostName"
                                            data-dept="@request?.Department?.Name"
                                            data-img="@imgUrl"
                                            data-checkedin="@request.IsCheckedIn.ToString().ToLower()">

                                            <td>@displayCount</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-light rounded-circle d-flex justify-content-center align-items-center mr-3" style="width: 35px; height: 35px; color: var(--primary-blue)">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                    <strong>@visitorName</strong>
                                                </div>
                                            </td>
                                            <td>@request.VisitDateTimeStart.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (request.IsCheckedIn)
                                                {
                                                    <span class="badge badge-success px-3 py-2">@Localizer["Checked In"]</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary px-3 py-2">@Localizer["Checked Out"]</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

