                                <div class="inner">
                                    <h3>@ViewBag.CompanyEmployees</h3>
                                    <p>@Localizer["All Registered Users"]</p>
                                </div>
                                <a asp-controller="Admin" asp-action="Index" class="small-box-footer">
                                    @Localizer["More Info"] <i class="fas fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>
