@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // -------- Bar Chart --------
            var barCtx = document.getElementById('adminBarChart')?.getContext('2d');
            if (barCtx) {
                var Pendingrequest = @ViewBag.Pendingrequest;
                var Approvedrequest = @ViewBag.Approvedrequest;
                var Rejectedrequest = @ViewBag.Rejectedrequest;
                var allRegisteredUser = @ViewBag.allRegisteredUser;
                new Chart(barCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Registered Users', 'Pending Requests', 'Approved Requests', 'Rejected Requests'],
                        datasets: [{
                            label: 'Count',
                            data: [allRegisteredUser, Pendingrequest, Approvedrequest, Rejectedrequest],
                            backgroundColor: [
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(255, 99, 132, 0.2)'
                            ],
                            borderColor: [
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(255, 99, 132, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: { 
                                display: true,
                                position: 'top' 
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(tooltipItem) {
                                        return tooltipItem.raw + ' users';
                                    }
                                }
                            }
                        },
                        scales: { 
                            y: { 
                                beginAtZero: true 
                            } 
                        }
                    }
                });
            }

            // -------- Doughnut Chart --------
            var pieCtx = document.getElementById('userRolesPieChart')?.getContext('2d');
            if (pieCtx) {
                new Chart(pieCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Admin', 'Supervisor', 'Employee', 'Gate Keepers'],
                        datasets: [{
                            label: 'User Roles',
                            data: [@ViewBag.admins, @ViewBag.supervisors, @ViewBag.employees, @ViewBag.gatekeepers],
                            backgroundColor: [
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)',
                                'rgba(255, 205, 86, 0.2)'
                            ],
                            borderColor: [
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)',
                                'rgba(255, 205, 86, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: { 
                            legend: { 
                                position: 'top' 
                            }, 
                            tooltip: { 
                                callbacks: { 
                                    label: t => t.raw + ' roles' 
                                } 
                            } 
                        },
                        scales: { 
                            y: { 
                                beginAtZero: true 
                            } 
                        }
                    }
                });
            }

            // -------- Line Chart --------
            var lineCtx = document.getElementById('requestsLineChart');
            if (lineCtx) {
                lineCtx = lineCtx.getContext('2d');
                
                // Safely get the time data with a fallback to empty array
                var timeData = @Html.Raw(Json.Serialize(ViewBag.RequestsOverTime ?? new List<object>()));
                
                // Debug: Log the data to console
                console.log('Line chart data:', timeData);
                
                // Ensure we have valid data
                if (!timeData || !Array.isArray(timeData) || timeData.length === 0) {
                    console.warn('No data available for the line chart');
                    
                    // Create a default empty chart with a message
                    new Chart(lineCtx, {
                        type: 'line',
                        data: {
                            labels: ['No data available'],
                            datasets: [{
                                label: 'No Data',
                                data: [0],
                                backgroundColor: 'rgba(200, 200, 200, 0.1)',
                                borderColor: 'rgba(200, 200, 200, 1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: { display: false },
                                title: {
                                    display: true,
                                    text: 'No request data available for the selected period'
                                }
                            }
                        }
                    });
                    return;
                }
                
                // If we have data, create the actual chart
                try {
                    new Chart(lineCtx, {
                        type: 'line',
                        data: {
                            labels: timeData.map(function(x) { return x.date || ''; }),
                            datasets: [{
                                label: 'Number of Requests',
                                data: timeData.map(function(x) { return x.count || 0; }),
                                fill: true,
                                backgroundColor: 'rgba(60, 141, 188, 0.1)',
                                borderColor: 'rgba(60, 141, 188, 1)',
                                borderWidth: 2,
                                pointBackgroundColor: 'rgba(60, 141, 188, 1)',
                                pointBorderColor: '#fff',
                                pointHoverBackgroundColor: '#fff',
                                pointHoverBorderColor: 'rgba(60, 141, 188, 1)',
                                tension: 0.3
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: { 
                                legend: { 
                                    display: true,
                                    position: 'top'
                                },
                                tooltip: {
                                    mode: 'index',
                                    intersect: false
                                }
                            },
                            scales: { 
                                x: { 
                                    display: true,
                                    title: {
                                        display: true,
                                        text: 'Date'
                                    }
                                }, 
                                y: { 
                                    beginAtZero: true,
                                    title: {
                                        display: true,
                                        text: 'Number of Requests'
                                    },
                                    ticks: {
                                        stepSize: 1,
                                        precision: 0,
                                        callback: function(value) { 
                                            if (value % 1 === 0) { return value; } 
                                        }
                                    }
                                } 
                            }
                        }
                    });
                } catch (error) {
                    console.error('Error creating line chart:', error);
                    
                    // Fallback to a simple message if chart creation fails
                    lineCtx.font = '16px Arial';
                    lineCtx.fillStyle = '#666';
                    lineCtx.textAlign = 'center';
                    lineCtx.fillText('Unable to display chart', lineCtx.canvas.width / 2, lineCtx.canvas.height / 2);
                }
            }
        });
    </script>
}

