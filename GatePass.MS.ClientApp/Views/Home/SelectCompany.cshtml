    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .stats-container {
            background: linear-gradient(135deg, whaite 0%, white 100%);
            color: black;
            border-radius: 15px;
            padding: 25px;
            margin: 0 auto 40px;
            max-width: 800px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .stats-header {
            text-align: center;
            margin-bottom: 25px;
        }

            .stats-header i {
                font-size: 2.5rem;
                margin-bottom: 10px;
                display: block;
            }

            .stats-header h2 {
                margin: 0;
                font-weight: 600;
                font-size: 1.5rem;
            }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .stat-box {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            transition: transform 0.3s ease;
        }

            .stat-box:hover {
                transform: translateY(-5px);
                background: rgba(255, 255, 255, 0.15);
            }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 10px 0 5px;
            color: black;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .stat-label {
            font-size: 0.9rem;
            opacity: 0.9;
            letter-spacing: 0.5px;
        }

        @@media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
