    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">

                <h1>Welcome to Ethiopian Government Offices <br />Visitors Portal!</h1>

                <h4>Powered by Ministry of Innovation and Technology (MInT)</h4>
                <br />
                <p>Streamlined Guest Registration, Check-In & Check-Out processes for a better visit experiences!</p>

                <a href="#companies" class="btn-primary">Get Started</a>
            </div>
        </div>
    </section>
    <!-- Companies Section -->
    <section id="companies" class="companies-section">
        <div class="container">
            <div class="stats-container">
                <div class="stats-header">
                    <i class="fas fa-chart-line"></i>
                    <h2>Visitor Management System Overview</h2>
                </div>
                <div class="stats-grid">
                    <div class="stat-box">
                        <i class="fas fa-building"></i>
                        <div class="stat-number">@ViewBag.TotalCompanies</div>
                        <div class="stat-label">Total Organizations</div>
                    </div>
                    <div class="stat-box">
                        <i class="fas fa-users"></i>
                        <div class="stat-number">@ViewBag.TodaysVisits</div>
                        <div class="stat-label">Today's Visits</div>
                    </div>
                    <div class="stat-box">
                        <i class="fas fa-history"></i>
                        <div class="stat-number">@ViewBag.TotalVisits</div>
                        <div class="stat-label">All-Time Visits</div>
                    </div>
                </div>
            </div>
            <div class="section-header">
                <h2>Select Your Destination</h2>
                <p>Choose the organization you're visiting today</p>
            </div>
            <div class="mb-4">
                <input type="text"
                       id="companySearch"
                       placeholder="Search companies..."
                       class="w-full p-2 border border-gray-300 rounded"
                       onkeyup="filterCompanies()" />
            </div>

            <div class="companies-grid grid gap-4"
                 style="grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));">
                @foreach (var comp in Model.OrderBy(c => c.Name))
                {
                    <a class="company-card block border rounded p-2 text-center bg-white shadow"
                       asp-controller="Home"
                       asp-action="Index"
                       asp-route-companyName="@comp.Slug">
                        <div class="company-logo mb-2">
                            <img src="@comp.LogoPath" alt="@comp.Name" class="mx-auto max-h-16" />
                        </div>
                        <div class="company-info">
                            <h3 class="text-sm font-medium">@comp.Name</h3>
                        </div>
                    </a>
                }
            </div>


            </div>
        </div>
    </section>

