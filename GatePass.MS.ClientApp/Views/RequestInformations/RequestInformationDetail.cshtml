@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model GatePass.MS.Domain.ViewModels.RequestInformationViewDetail

@{
    ViewData["Title"] = "View Detail";
}

<h1>@Localizer["Detail"]</h1>

<h4>@Localizer["Request Information"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApproveDisapprove">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GuestFirstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GuestFirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GuestLastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GuestLastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GuestEmail)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GuestEmail)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GuestPhoneNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GuestPhoneNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Approver)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Approver)
                </dd>
            </dl>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
