@using GatePass.MS.Domain
@using Microsoft.AspNetCore.Identity
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject GatePass.MS.ClientApp.Controllers.ISettingService _isettingService
@inject GatePass.MS.ClientApp.Service.ICurrentCompany _current
@{
    var AppName = await _isettingService.GetSettingValueAsync("AppName");
    var companyName = ViewContext.RouteData.Values["companyName"]?.ToString();

}


<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - visitor management system</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

    <style>

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }



        .container-login {
            display: grid;
            grid-template-columns: 0.5fr 2.5fr; /* Left column 1/3, right column 2/3 */
            width: 100%;
            max-width: none !important;
            height: 100vh;
            padding: 0; /* Remove any padding */
            margin: 0; /* Remove any margin */
        }

        .left-column {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 10px;
            background-color: #007BFF;
            width: 100%; /* Ensure full width */
            padding: 0; /* Remove any padding */
            margin: 0; /* Remove any margin */
        }

            .left-column img {
                width: 60%;
                height: auto;
            }

        .middle-text {
            text-align: center;
        }

        .right-column {
            display: flex;
            flex-direction: column;
            height: 100vh;
            width: 100%; /* Ensure full width */
            padding: 0; /* Remove any padding */
            margin: 0; /* Remove any margin */
        }







        .top-row {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: white;
            height: 30%;
        }

        .logo-login {
            width: 400px;
        }

        .bottom-row {
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient( to bottom right, rgb(18, 44, 116), rgb(2, 2, 36) );
            height: 60%; /* Increased from 50% to 60% */
        }

    </style>


</head>

<body class="hold-transition sidebar-mini  layout-fixed ">
    @if (SignInManager.IsSignedIn(User))

    {

        var user = await UserManager.GetUserAsync(User);
        var isInSupervisorRole = await UserManager.IsInRoleAsync(user, "SUPERVISER");
        var isInAdminRole = await UserManager.IsInRoleAsync(user, "ADMIN");
        var isInEmployeeRole = await UserManager.IsInRoleAsync(user, "EMPLOYEE");
        var isInGatekeeperRole = await UserManager.IsInRoleAsync(user, "GATEKEEPER");

        <div class="wrapper">

            <nav class="main-header navbar navbar-expand navbar-white navbar-light fixed-top" style="border-top: 3px solid #007bff; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-primary" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <partial name="_notificationPartial" />
                    <partial name="_LoginPartial" />
                    <li class="mt-2 mr-3">
                        <form asp-controller="Language" asp-action="SetLanguage" method="post">
                            <select name="culture" onchange="this.form.submit()" class="form-control form-control-sm text-primary" style="border: 1px solid #cce5ff; background-color: #f8f9fa;  font-weight: 600;">
                                <option value="en-US" selected="@(CultureInfo.CurrentCulture.Name == "en-US")">English</option>
                
                                <option value="am-ET" selected="@(CultureInfo.CurrentCulture.Name == "am-ET")">አማርኛ</option>
                            </select>
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                        </form>
                    </li>
                </ul>
            </nav>
            <aside class="main-sidebar sidebar-light-primary elevation-4">

                <a href="" class="brand-link" style="background: linear-gradient(45deg, #007bff, #0056b3); color: white;">
                    <i class="fas fa-layer-group brand-image img-circle elevation-3" style="opacity: .9; color: white; background: transparent; font-size: 1.4rem; margin-top: 2px; margin-left: 12px;"></i>
                    <span class="brand-text font-weight-bold" style="color: white; margin-left: 5px;">@AppName</span>
                </a>

                <div class="sidebar">

                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false" style="width: 100%;">
                                    <li class="nav-item">
                                        <a asp-area="" asp-route-companyName="@companyName" asp-controller="Home" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-tachometer-alt text-primary"></i>
                                            <p class="font-weight-bold">
                                                @Localizer["Dashboard"]
                                            </p>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            @if (isInSupervisorRole || isInEmployeeRole)
                            {
                                <li class="nav-item">
                                    <a asp-controller="RequestInformations" asp-route-companyName="@companyName" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fas fa-book text-primary"></i>
                                        <p>
                                            @Localizer["requests"]
                                            @if (ViewBag.NumberOfInvitations is int && ViewBag.NumberOfInvitations > 0)
                                            {
                                                <span class="right badge badge-primary">@ViewBag.NumberOfInvitations</span>
                                            }
                                        </p>
                                    </a>
                                </li>
                            }

                            @if (isInSupervisorRole)
                            {
                                <li class="nav-item">
                                    <a asp-controller="DeligateRole" asp-route-companyName="@companyName" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fas fa-building text-primary"></i>
                                        <p>
                                            @Localizer["Role Deligations"]
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-chart-pie text-info text-primary"></i>
                                        <p>
                                            @Localizer["Reports"]
                                            <i class="right fas fa-angle-left "></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview" style="display: none;">
                                        <li class="nav-item">
                                            <a asp-controller="Reports" asp-action="VisitReport" asp-route-companyName="@companyName" class="nav-link">
                                                <i class="far fa-circle nav-icon text-sm text-info"></i>
                                                <p>@Localizer["Request Report"]</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Reports" asp-action="GuestActivityReport" asp-route-companyName="@companyName" class="nav-link">
                                                <i class="far fa-circle nav-icon text-sm text-info"></i>
                                                <p>@Localizer["Guest Report"]</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @if (isInAdminRole)
                            {
                                if (companyName == "MINT" || companyName == "mint")
                                {
                                    <li class="nav-item">
                                        <a asp-controller="Companies" asp-route-companyName="@companyName" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-building text-primary"></i>
                                            <p>
                                                @Localizer["Organizations"]
                                            </p>
                                        </a>
                                    </li>
                                }

                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-cogs text-primary"></i>
                                        <p>
                                            @Localizer["Content Management"]
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview" style="display: none;">
                                        <li class="nav-item">
                                            <a asp-controller="Departments" asp-route-companyName="@companyName" asp-action="Index" class="nav-link">
                                                <i class="nav-icon fas fa-building text-xs text-secondary"></i>
                                                <p>@Localizer["departments"]</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Designations" asp-route-companyName="@companyName" asp-action="Index" class="nav-link">
                                                <i class="nav-icon fas fa-id-badge text-xs text-secondary"></i>
                                                <p>@Localizer["designations"]</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Employees" asp-route-companyName="@companyName" asp-action="Index" class="nav-link">
                                                <i class="nav-icon fas fa-user text-xs text-secondary"></i>
                                                <p>@Localizer["employees"]</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Feedbacks" asp-route-companyName="@companyName" asp-action="Index" class="nav-link">
                                                <i class="nav-icon fas fa-comment text-xs text-secondary"></i>
                                                <p>@Localizer["Feedbacks"]</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-route-companyName="@companyName" asp-action="EmployeeList" class="nav-link">
                                        <i class="nav-icon fas fa-user-plus text-primary"></i>
                                        <p>
                                            @Localizer["Register New User"]
                                        </p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-route-companyName="@companyName" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fas fa-users-cog text-primary"></i>
                                        <p>
                                            @Localizer["manageUser"]
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-route-companyName="@companyName" asp-action="RequestTobeDeleted" class="nav-link">
                                        <i class="nav-icon fas fa-trash-alt text-primary"></i>
                                        <p>
                                            @Localizer["outDatedRequest"]
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-chart-pie text-info text-primary"></i>
                                        <p>
                                            @Localizer["Reports"]
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview" style="display: none;">
                                        <li class="nav-item">
                                            <a asp-controller="Reports" asp-route-companyName="@companyName" asp-action="VisitReport" class="nav-link">
                                                <i class="far fa-circle nav-icon text-sm text-info"></i>
                                                <p>@Localizer["Request Report"]</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Reports" asp-route-companyName="@companyName" asp-action="UserActivityReport" class="nav-link">
                                                <i class="far fa-circle nav-icon text-sm text-info"></i>
                                                <p>@Localizer["User Report"]</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-route-companyName="@companyName" asp-action="UpdateSetting" class="nav-link">
                                        <i class="nav-icon fas fa-cog text-primary"></i>
                                        <p>
                                            @Localizer["setting"]
                                        </p>
                                    </a>
                                </li>
                            }

                            <li class="nav-item">
                                <a asp-area="Identity"
                                   asp-route-companyName="@companyName"
                                   asp-page="/Account/Manage/Index" title="Manage" class="nav-link">
                                    <i class="nav-icon fas fa-wallet text-primary"></i>
                                    <p>
                                        @Localizer["account"]
                                    </p>
                                </a>
                            </li>

                        </ul>
                    </nav>
                </div>
            </aside>

            <div class="content-wrapper ps-1" style="background-color: #f4f6f9;">
                <br /><br /><br />
                @RenderBody()
            </div>

        </div>

        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        @* <footer class="main-footer" style="position:fixed; bottom:0; left:0; width:100%; height:35px; background:#f4f6f9; text-align:center; display:flex; justify-content:center; align-items:center; font-size:14px; padding:0; z-index:1000;">
            <strong>Copyright &copy; 2025 <a href="">MInT</a></strong> All rights reserved.
        </footer> *@




    }
    else
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
                <div class="container-fluid">
                    <a class="navbar-brand"
                       asp-area=""
                       asp-controller="Home"
                       asp-route-companyName="@companyName"
                       asp-action="Index"
                       style="
           font-size:20px;
           font-weight:800;
           letter-spacing:1.5px;
           text-transform:uppercase;
           color:#004aad;
           text-decoration:none;
       ">
                        @AppName
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                        </ul>
                        <partial name="_LoginPartial" />
                        <!-- Language selection form -->

                        <form asp-controller="Language" asp-action="SetLanguage" method="post">
                            <select name="culture" onchange="this.form.submit()" style="border: none;">
                                <option value="en-US" selected="@(CultureInfo.CurrentCulture.Name == "en-US")">English</option>
                                
                                <option value="am-ET" selected="@(CultureInfo.CurrentCulture.Name == "am-ET")">አማርኛ</option>
                            </select>
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                        </form>

                    </div>
                </div>
            </nav>
        </header>
        <div>
            <main role="main" class="pb-3 ms-">
                @RenderBody()
            </main>
        </div>





    }
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/jszip/jszip.min.js"></script>
    <script src="~/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var message = '@TempData["Message"]';
            var messageType = '@TempData["MessageType"]';

            if (message) {
                Swal.fire({
                    icon: messageType,
                    title: messageType.charAt(0).toUpperCase() + messageType.slice(1),
                    text: message,
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true
                });
            }
        });
    </script>
    <script>
        $(function () {
            $("#myDataTable").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#myDataTable_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>